{% extends 'base.html.twig' %}

{% block title %}Delete book{% endblock %}

{% block body %}
<main class="main"> 
    <div class="flex-container-row">
        {{ include('library/menu.html.twig') }}
        <div class="flex-column-70">
            <h1>Ta bort bok med id {{ id }}</h1>
            <form class="label-left" method="post" enctype="multipart/form-data"
                action="{{ path('book_delete') }}">
                <fieldset>
                    <legend>Uppdatera bok</legend>

                    <label for="id">ID</label>
                    <input id="id" type="text" name="id" readonly value="{{ book.getId|e }}">

                    <label for="isbn">ISBN</label>
                    <input id="isbn" type="text" name="isbn" readonly value="{{ book.getIsbn|e }}">

                    <label for="title">Titel</label>
                    <input id="title" type="text" name="title" readonly value="{{ book.getTitle|e }}">

                    <label for="author">FÃ¶rfattare</label>
                    <input id="author" type="text" name="author" readonly value="{{ book.getAuthor|e }}">

                    <label for="pictureToUpload">Ladda upp bild</label>
                    <input id="pictureToUpload" type="file" name="pictureToUpload" readonly>

                    <input type="submit" name="doit" value="Ta bort">
                </fieldset>
            </form>
        </div>
</div>
</main>
{% endblock %}
